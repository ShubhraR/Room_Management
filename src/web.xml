<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>LogInPage</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>

	</welcome-file-list>

	<servlet>
		<servlet-name>LogInCheck</servlet-name>
		<servlet-class>LogInCheck</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchForRoom</servlet-name>
		<servlet-class>SearchForRoom</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>SendConfirmation</servlet-name>
	<servlet-class>SendConfirmation</servlet-class>
	
	</servlet>

	<servlet-mapping>
		<servlet-name>LogInCheck</servlet-name>
		<url-pattern>login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SearchForRoom</servlet-name>
		<url-pattern>WelcomePage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SendConfirmation</servlet-name>
		<url-pattern>RoomDetails</url-pattern>
	</servlet-mapping>
	
